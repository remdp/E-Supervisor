<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvDateNumberStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_medium"
        android:text="@string/doc_emix_number_date_status"
        android:theme="@style/Label.SmallTitle"
        app:layout_constraintEnd_toStartOf="@+id/tvTradingAgentOperationType"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="@dimen/doc_emix_date_number_status_percent" />

    <TextView
        android:id="@+id/tvTradingAgentOperationType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/margin_little"
        android:text="@string/doc_emix_trading_agent_operation_type"
        android:theme="@style/Label.SmallTitle"
        app:layout_constraintEnd_toStartOf="@+id/tvPartner"
        app:layout_constraintStart_toEndOf="@+id/tvDateNumberStatus"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="@dimen/doc_emix_trading_agent_operation_type" />

    <TextView
        android:id="@+id/tvPartner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/partner_sum"
        android:theme="@style/Label.SmallTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvTradingAgentOperationType"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="@dimen/doc_emix_partner" />



</androidx.constraintlayout.widget.ConstraintLayout>