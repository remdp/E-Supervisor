<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvDocEmixDetailNewPartner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gdlnStart"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/margin_small" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gdlnHCenter"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gdlnEnd"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/margin_small" />

        <View
            android:id="@+id/vGreyBackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_little"
            android:layout_marginBottom="@dimen/margin_little"
            android:background="@drawable/rounded_shape_4dp_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/gdlnEnd"
            app:layout_constraintStart_toStartOf="@+id/gdlnStart"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvOutletNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_big"
            android:layout_marginEnd="@dimen/margin_small"
            android:text="@string/working_name"
            android:theme="@style/Table.SmallTitle"
            app:layout_constraintEnd_toStartOf="@+id/gdlnHCenter"
            app:layout_constraintTop_toTopOf="@+id/vGreyBackground" />

        <TextView
            android:id="@+id/tvWorkingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNileBlue"
            android:textSize="14sp"
            android:theme="@style/FormText"
            app:layout_constraintBottom_toBottomOf="@+id/tvOutletNameLabel"
            app:layout_constraintStart_toStartOf="@+id/gdlnHCenter"
            tools:text="Клімова Л.А." />

        <TextView
            android:id="@+id/tvInnerDSChannelLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_big"
            android:layout_marginEnd="@dimen/margin_small"
            android:text="@string/inner_distribution_channel"
            android:theme="@style/Table.SmallTitle"
            app:layout_constraintEnd_toStartOf="@+id/gdlnHCenter"
            app:layout_constraintTop_toBottomOf="@+id/tvOutletNameLabel" />

        <TextView
            android:id="@+id/tvInnerDSChannel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNileBlue"
            android:textSize="14sp"
            android:theme="@style/FormText"
            app:layout_constraintBottom_toBottomOf="@+id/tvInnerDSChannelLabel"
            app:layout_constraintStart_toStartOf="@+id/gdlnHCenter"
            tools:text="ТТ" />

        <TextView
            android:id="@+id/tvInstitutionNumberLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_big"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="@string/edrpou"
            android:theme="@style/Table.SmallTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/gdlnHCenter"
            app:layout_constraintTop_toBottomOf="@+id/tvInnerDSChannelLabel" />

        <TextView
            android:id="@+id/tvEDRPOU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNileBlue"
            android:textSize="14sp"
            android:theme="@style/FormText"
            app:layout_constraintBottom_toBottomOf="@+id/tvInstitutionNumberLabel"
            app:layout_constraintStart_toStartOf="@+id/gdlnHCenter"
            tools:text="2524711908" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>