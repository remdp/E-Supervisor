<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_100">

    <EditText
        android:id="@+id/etPeriod"
        style="@style/Text.Label.16.Gray500"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/DP_8"
        android:background="@drawable/bg_8dp_white_border"
        android:drawablePadding="@dimen/DP_12"
        android:focusable="false"
        android:hint="@string/period_selection"
        android:padding="@dimen/DP_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivAdditionalAction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:drawableEnd="@drawable/ic_cross_gray_300"
        tools:drawableStart="@drawable/ic_calendar"
        tools:text="01.01.2023-31.01.2023" />

    <ImageView
        android:id="@+id/ivAdditionalAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/DP_8"
        android:background="@drawable/bg_8dp_white"
        android:padding="@dimen/DP_12"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivFunnel"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_add"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/ivFunnel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_8dp_white"
        android:padding="@dimen/DP_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_funnel" />

</androidx.constraintlayout.widget.ConstraintLayout>