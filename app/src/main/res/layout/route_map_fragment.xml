<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mapbox.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.mapbox.maps.MapView>

    <ImageView
        android:id="@+id/ivFunnel"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/DP_8"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/DP_8"
        android:background="@drawable/bg_8dp_white"
        android:padding="@dimen/DP_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_funnel" />

    <View
        android:id="@+id/vDay"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/DP_40"
        android:background="@drawable/bg_8dp_dark_alpha_40"
        app:layout_constraintBottom_toBottomOf="@+id/mapView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.5" />

    <ImageView
        android:id="@+id/ivArrowLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/DP_8"
        app:layout_constraintBottom_toBottomOf="@+id/vDay"
        app:layout_constraintStart_toStartOf="@+id/vDay"
        app:layout_constraintTop_toTopOf="@+id/vDay"
        app:srcCompat="@drawable/ic_arrow_left_filled" />

    <TextView
        android:id="@+id/tvDay"
        style="@style/Text.Label.14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/vDay"
        app:layout_constraintEnd_toEndOf="@+id/vDay"
        app:layout_constraintStart_toStartOf="@+id/vDay"
        app:layout_constraintTop_toTopOf="@+id/vDay"
        tools:text="08.11.2023" />


    <ImageView
        android:id="@+id/ivArrowRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/DP_8"
        app:layout_constraintBottom_toBottomOf="@+id/vDay"
        app:layout_constraintEnd_toEndOf="@+id/vDay"
        app:layout_constraintTop_toTopOf="@+id/vDay"
        app:srcCompat="@drawable/ic_arrow_right_filled" />


    <com.euromix.esupervisor.app.views.ResultView
        android:id="@+id/vResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>