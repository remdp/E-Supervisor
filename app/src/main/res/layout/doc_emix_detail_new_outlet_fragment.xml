<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvDocEmixDetailNewPartner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gdlnStart"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/margin_small" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gdlnHCenter"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gdlnEnd"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/margin_small" />

        <View
            android:id="@+id/vGreyBackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/rounded_shape_4dp_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/gdlnEnd"
            app:layout_constraintStart_toStartOf="@+id/gdlnStart"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/margin_little"
            android:layout_marginBottom="@dimen/margin_little"/>

        <TextView
            android:id="@+id/tvOutletNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_big"
            android:layout_marginEnd="@dimen/margin_small"
            android:text="Outlet name"
            android:theme="@style/Table.SmallTitle"
            app:layout_constraintEnd_toStartOf="@+id/gdlnHCenter"
            app:layout_constraintTop_toTopOf="@+id/vGreyBackground" />

        <TextView
            android:id="@+id/tvOutletName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNileBlue"
            android:textSize="14sp"
            android:theme="@style/FormText"
            app:layout_constraintBottom_toBottomOf="@+id/tvOutletNameLabel"
            app:layout_constraintStart_toStartOf="@+id/gdlnHCenter"
            tools:text="лоток бакалея" />

        <TextView
            android:id="@+id/tvInnerDSChannelLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_big"
            android:layout_marginEnd="@dimen/margin_small"
            android:text="Institution type"
            android:theme="@style/Table.SmallTitle"
            app:layout_constraintEnd_toStartOf="@+id/gdlnHCenter"
            app:layout_constraintTop_toBottomOf="@+id/tvOutletNameLabel" />

        <TextView
            android:id="@+id/tvInstitutionType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNileBlue"
            android:textSize="14sp"
            android:theme="@style/FormText"
            app:layout_constraintBottom_toBottomOf="@+id/tvInnerDSChannelLabel"
            app:layout_constraintStart_toStartOf="@+id/gdlnHCenter"
            tools:text="Точка на рынке" />

        <TextView
            android:id="@+id/tvInstitutionNumberLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_big"
            android:layout_marginEnd="@dimen/margin_small"
            android:text="Institution number"
            android:theme="@style/Table.SmallTitle"
            app:layout_constraintEnd_toStartOf="@+id/gdlnHCenter"
            app:layout_constraintTop_toBottomOf="@+id/tvInnerDSChannelLabel" />

        <TextView
            android:id="@+id/tvInstitutionNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNileBlue"
            android:textSize="14sp"
            android:theme="@style/FormText"
            app:layout_constraintBottom_toBottomOf="@+id/tvInstitutionNumberLabel"
            app:layout_constraintStart_toStartOf="@+id/gdlnHCenter"
            tools:text="15" />

        <TextView
            android:id="@+id/tvGeneralOutletLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_big"
            android:layout_marginEnd="@dimen/margin_small"
            android:text="General outlet"
            android:theme="@style/Table.SmallTitle"
            app:layout_constraintEnd_toStartOf="@+id/gdlnHCenter"
            app:layout_constraintTop_toBottomOf="@+id/tvInstitutionNumberLabel" />

        <TextView
            android:id="@+id/tvGeneralOutlet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNileBlue"
            android:textSize="14sp"
            android:theme="@style/FormText"
            app:layout_constraintBottom_toBottomOf="@+id/tvGeneralOutletLabel"
            app:layout_constraintStart_toStartOf="@+id/gdlnHCenter"
            tools:text="Рынок Новый, Точка на рынке Контейнер, 430" />

        <TextView
            android:id="@+id/tvNewGeneralOutletLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_big"
            android:layout_marginEnd="@dimen/margin_small"
            android:text="New general outlet"
            android:theme="@style/Table.SmallTitle"
            app:layout_constraintEnd_toStartOf="@+id/gdlnHCenter"
            app:layout_constraintTop_toBottomOf="@+id/tvGeneralOutletLabel" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swNewGeneralOutlet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintBottom_toBottomOf="@+id/tvNewGeneralOutletLabel"
            app:layout_constraintStart_toStartOf="@+id/gdlnHCenter"
            app:layout_constraintTop_toTopOf="@+id/tvNewGeneralOutletLabel" />

        <TextView
            android:id="@+id/tvOutletFormatLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_big"
            android:layout_marginEnd="@dimen/margin_small"
            android:text="Outlet format"
            android:theme="@style/Table.SmallTitle"
            app:layout_constraintEnd_toStartOf="@+id/gdlnHCenter"
            app:layout_constraintTop_toBottomOf="@+id/tvNewGeneralOutletLabel" />

        <TextView
            android:id="@+id/tvOutletFormat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNileBlue"
            android:textSize="14sp"
            android:theme="@style/FormText"
            app:layout_constraintBottom_toBottomOf="@+id/tvOutletFormatLabel"
            app:layout_constraintStart_toStartOf="@+id/gdlnHCenter"
            tools:text="МАФ (киоск/павильон/ларек)" />

        <TextView
            android:id="@+id/tvLocalityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_big"
            android:layout_marginEnd="@dimen/margin_small"
            android:text="Locality"
            android:theme="@style/Table.SmallTitle"
            app:layout_constraintEnd_toStartOf="@+id/gdlnHCenter"
            app:layout_constraintTop_toBottomOf="@+id/tvOutletFormatLabel" />

        <TextView
            android:id="@+id/tvLocality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNileBlue"
            android:textSize="14sp"
            android:theme="@style/FormText"
            app:layout_constraintBottom_toBottomOf="@+id/tvLocalityLabel"
            app:layout_constraintStart_toStartOf="@+id/gdlnHCenter"
            tools:text="Маріуполь" />

        <TextView
            android:id="@+id/tvStreetLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_big"
            android:layout_marginEnd="@dimen/margin_small"
            android:text="Street"
            android:theme="@style/Table.SmallTitle"
            app:layout_constraintEnd_toStartOf="@+id/gdlnHCenter"
            app:layout_constraintTop_toBottomOf="@+id/tvLocalityLabel" />

        <TextView
            android:id="@+id/tvStreet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNileBlue"
            android:textSize="14sp"
            android:theme="@style/FormText"
            app:layout_constraintBottom_toBottomOf="@+id/tvStreetLabel"
            app:layout_constraintStart_toStartOf="@+id/gdlnHCenter"
            tools:text="Пилипа Орлика" />

        <TextView
            android:id="@+id/tvHouseNumberLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_big"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="House number"
            android:theme="@style/Table.SmallTitle"
            app:layout_constraintEnd_toStartOf="@+id/gdlnHCenter"
            app:layout_constraintTop_toBottomOf="@+id/tvStreetLabel"
            app:layout_constraintBottom_toBottomOf="@+id/vGreyBackground"/>

        <TextView
            android:id="@+id/tvHouseNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNileBlue"
            android:textSize="14sp"
            android:theme="@style/FormText"
            app:layout_constraintBottom_toBottomOf="@+id/tvHouseNumberLabel"
            app:layout_constraintStart_toStartOf="@+id/gdlnHCenter"
            tools:text="26" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>